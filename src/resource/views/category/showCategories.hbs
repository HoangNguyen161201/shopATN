<link rel="stylesheet" href="/css/showcategories.css">
<div class="background-body">
    <h3 class="title-muc">Show categories</h3>
</div>
<div class="body-ct">
    <div class="contain-ct">
        <table id="example" class="table table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Name</th>
                    <th>Update</th>
                    <th>Delete</th>
                    <th>Detail</th>
                </tr>
            </thead>
            <tbody>
                {{#if result}}
                {{#each result as |value| }}
                <tr>
                    <td>{{value._id}}</td>
                    <td>{{value.name}}</td>
                    <td class="func-ct">
                        <a href="/managerCategories/update/{{value._id}}">
                            <i class="fas fa-pen update-ct"></i>
                        </a>
                    </td>
                    <td class="func-ct">
                        <i data-id="{{value._id}}" data-name="{{value.name}}"
                            class="fas fa-trash-alt delete-ct d-ct"></i>
                    </td>
                    <td class="func-ct">
                        <a href="/managerCategories/category/{{value._id}}">
                            <i class="fas fa-calendar-week detail-ct"></i>
                        </a>
                    </td>
                    {{/each}}
                    {{/if}}
            </tbody>

        </table>
    </div>
</div>