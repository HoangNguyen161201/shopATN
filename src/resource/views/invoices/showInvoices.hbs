<link rel="stylesheet" href="/css/showcategories.css">
<div class="background-body">
    <h3 class="title-muc">Show categories</h3>
</div>
<div class="body-ct">
    <div class="contain-ct">
        <table id="example" class="table table-striped infor-invoice" style="width:100%">
            <thead>
                <tr>
                    <th>Id order</th>
                    <th>Name customer</th>
                    <th>Date</th>
                    <th>Type Product</th>
                    <th>Quantity</th>
                    <th>Total</th>

                    <th>Invoice</th>
                    <th>Detail</th>
                </tr>
            </thead>
            <tbody>
                {{#if result}}
                {{#each result as |value| }}
                <tr>

                    <td>{{value._id.id_order}}</td>
                    <td>{{value._id.customer.name}}</td>
                    <td>{{date value._id.date_to_order}}</td>
                    <td>{{value.type_product}}</td>
                    <td>{{value.quantity}}</td>
                    <td>{{value.total}}$</td>

                    <td class="func-ct">
                        <a target="_bank" href="/managerInvoices/bill/{{value._id.id_order}}">
                            <i class="fas fa-receipt update-ct"></i>
                        </a>
                    </td>
                    <td class="func-ct">
                        <a href="/managerInvoices/order/{{value._id.id_order}}">
                            <i class="fas fa-calendar-week detail-ct"></i>
                        </a>
                    </td>
                    {{/each}}
                    {{/if}}
            </tbody>
        </table>
    </div>
</div>