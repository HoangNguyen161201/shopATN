<link rel="stylesheet" href="/css/addPr.css">
<div class="background-body">
    <h3 class="title-muc">Update supplier</h3>
</div>
<div class="main-addPr">
    <div class="f-addPr">
        <div class="intro">
            <div class="intro-m">
                <div class="line"></div>
                <div class="infor-add">1. basic infor</div>
                <div class="infor-add">2. image</div>
            </div>
        </div>
        <form action="/managerSuppliers/actUpdate" class="form-add" enctype="multipart/form-data" method="post">
            {{#if result}}
            {{#each result}}
            <p class="main-title">1. basic infor</p>
            <div class="input">
                <p class="childen-title">supplier id</p>
                <input type="text" readonly value="{{this._id}}" name="id" id="">
            </div>
            <div class="price-quantity">
                <div class="input">
                    <p class="childen-title">name supplier</p>
                    <input type="text" name="name" value="{{this.name}}" id="name">
                    <p class="message"></p>
                </div>
                <div class="input">
                    <p class="childen-title">Email</p>
                    <input type="email" value="{{this.email}}" name="email" id="email">
                    <p class="message"></p>

                </div>
            </div>

            <p class="main-title">3. image</p>
            <div class="input">
                <p class="childen-title">Add new image to change</p>
                <label for="addfile" class="lable-file">
                    <img class="backg-img" src="https://img.icons8.com/cute-clipart/64/000000/edit-image.png" />
                </label>
                <input type="file" name="file" id="addfile">
            </div>
            <button class="submit" type="submit">Update</button>
            {{/each}}
            {{/if}}
        </form>
    </div>

</div>
<script>
    validation({
        form:'.form-add',
        rule:[
            validation.isrequire('#name'),
            validation.isrequire('#email'),
            validation.checkemail('#email'),
        ]
    })
</script>